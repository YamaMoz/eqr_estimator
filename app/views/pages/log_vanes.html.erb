<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Log Vanes</h3>
  </div>
  <div class="panel-body">
    <form action="/log_vanes/results" class="form-horizontal">

      <div class="form-group">
        <label for="qfc_width" class="col-sm-4 control-label">Bankfull Width (Qcf)</label>
        <div class="col-sm-8">
          <input name="qfc_width" type="number" step="any" class="form-control" id="qfc_width" placeholder="Enter description of input">
        </div>
      </div>

      <div class="form-group">
        <label for="angle_shore" class="col-sm-4 control-label">Angle to Shore</label>
        <div class="col-sm-8">
          <input name="angle_shore" type="number" min="1" class="form-control" id="angle_shore" placeholder="Enter percentages as whole numbers, e.g. 5% as 5">
        </div>
      </div>

      <div class="form-group">
        <label for="qfc_log_takes" class="col-sm-4 control-label">Fraction of Bankfull Width (Qfc) Log Takes</label>
        <div class="col-sm-8">
          <input name="qfc_log_takes" type="number" step="0.001" class="form-control" id="qfc_log_takes" placeholder="Enter description of input">
        </div>
      </div>

      <div class="form-group">
        <label for="into_bank" class="col-sm-4 control-label">Distance Buried Into Bank</label>
        <div class="col-sm-8">
          <input name="into_bank" type="number" min="1" class="form-control" id="into_bank" placeholder="Enter description of input">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </div>

    </form>
  </div>
</div>