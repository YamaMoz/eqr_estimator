<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">J-Hook Vanes</h3>
  </div>
  <div class="panel-body">
    <form action="/jhook_vanes/results" class="form-horizontal">

      <div class="form-group">
        <label for="qfc_width" class="col-sm-4 control-label">Bankfull Width (Qcf)</label>
        <div class="col-sm-8">
          <input name="qfc_width" type="number" step="any" class="form-control" id="qfc_width" placeholder="Enter description of input">
        </div>
      </div>

      <div class="form-group">
        <label for="angle_shore" class="col-sm-4 control-label">Angle to Shore</label>
        <div class="col-sm-8">
          <input name="angle_shore" type="number" min="1" class="form-control" id="angle_shore" placeholder="Enter as whole number, e.g. 45Â° as 45">
        </div>
      </div>

      <div class="form-group">
        <label for="rock_width" class="col-sm-4 control-label">Rock Width</label>
        <div class="col-sm-8">
          <input name="rock_width" type="number" min="1" step="0.001" class="form-control" id="rock_width" placeholder="Enter in feet, e.g. 4.7">
        </div>
      </div>

      <div class="form-group">
        <label for="rock_height" class="col-sm-4 control-label">Rock Height</label>
        <div class="col-sm-8">
          <input name="rock_height" type="number" min="1" step="0.001" class="form-control" id="rock_height" placeholder="Enter in feet, e.g. 5.2">
        </div>
      </div>

      <div class="form-group">
        <label for="rock_diameter" class="col-sm-4 control-label">Rock Diameter</label>
        <div class="col-sm-8">
          <input name="rock_diameter" type="number" min="1" step="0.001" class="form-control" id="rock_diameter" placeholder="Enter in feet, e.g. 2.2">
        </div>
      </div>

      <div class="form-group">
        <label for="gap_fraction" class="col-sm-4 control-label">Gap (Fraction of Diameter)</label>
        <div class="col-sm-8">
          <input name="gap_fraction" type="number" min="1" step="0.001" class="form-control" id="gap_fraction" placeholder="Enter in feet, e.g. 6.9">
        </div>
      </div>

      <div class="form-group">
        <label for="rock_tiers" class="col-sm-4 control-label">Number of Rock Tiers</label>
        <div class="col-sm-8">
          <input name="rock_tiers" type="number" min="1" class="form-control" id="rock_tiers" placeholder="Enter description of input">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </div>

    </form>
  </div>
</div>