<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Rock Vanes</h3>
  </div>
  <div class="panel-body">
    <form action="/rock_vanes/results" class="form-horizontal">

      <div class="form-group">
        <label for="qcf_width" class="col-sm-4 control-label">Bankfull Width (Qcf)</label>
        <div class="col-sm-8">
          <input name="qcf_width" type="number" step="any" class="form-control" id="qcf_width" placeholder="Enter description of input">
        </div>
      </div>

      <div class="form-group">
        <label for="angle_shore" class="col-sm-4 control-label">Angle to Shore</label>
        <div class="col-sm-8">
          <input name="angle_shore" type="number" min="1" class="form-control" id="angle_shore" placeholder="Enter as whole number, e.g. 45Â° as 45">
        </div>
      </div>

      <div class="form-group">
        <label for="fraction_qcf_takes" class="col-sm-4 control-label">Fraction of Qcf Vane Takes</label>
        <div class="col-sm-8">
          <input name="fraction_qcf_takes" type="number" min="1" step="0.001" class="form-control" id="fraction_qcf_takes" placeholder="Enter description of input">
        </div>
      </div>

      <div class="form-group">
        <label for="rock_height" class="col-sm-4 control-label">Height</label>
        <div class="col-sm-8">
          <input name="rock_height" type="number" min="1" step="0.001" class="form-control" id="rock_height" placeholder="Enter in feet, e.g. 4.7">
        </div>
      </div>

      <div class="form-group">
        <label for="rock_width" class="col-sm-4 control-label">Rock Width</label>
        <div class="col-sm-8">
          <input name="rock_width" type="number" min="1" step="0.001" class="form-control" id="rock_width" placeholder="Enter in feet, e.g. 2.6">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </div>

    </form>
  </div>
</div>